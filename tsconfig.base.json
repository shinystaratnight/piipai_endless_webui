{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@webui/billing-metadata": ["libs/billing-metadata/src/index.ts"],
      "@webui/calendar": ["libs/calendar/src/index.ts"],
      "@webui/candidate-metadata": ["libs/candidate-metadata/src/index.ts"],
      "@webui/client-metadata": ["libs/client-metadata/src/index.ts"],
      "@webui/core": ["libs/core/src/index.ts"],
      "@webui/dashboard": ["libs/dashboard/src/index.ts"],
      "@webui/data": ["libs/data/src/index.ts"],
      "@webui/dialog": ["libs/dialog/src/index.ts"],
      "@webui/dynamic-form": ["libs/dynamic-form/src/index.ts"],
      "@webui/form-controls": ["libs/form-controls/src/index.ts"],
      "@webui/icon": ["libs/icon/src/index.ts"],
      "@webui/manager-metadata": ["libs/manager-metadata/src/index.ts"],
      "@webui/metadata": ["libs/metadata/src/index.ts"],
      "@webui/shared": ["libs/shared/src/index.ts"],
      "@webui/shared-metadata": ["libs/shared-metadata/src/index.ts"],
      "@webui/stepper": ["libs/stepper/src/index.ts"],
      "@webui/ui": ["libs/ui/src/index.ts"],
      "@webui/utilities": ["libs/utilities/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
